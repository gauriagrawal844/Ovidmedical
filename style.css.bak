    /* width: 313px; */
    max-width: 90%;
    overflow-wrap: anywhere;
    text-align: center;
}

.solution-subtitle {
    font-family: 'Barlow', sans-serif;
    font-weight: 400;
    font-size: 20px;
    line-height: 150%;
    letter-spacing: 0.15px;
    color: black;
    margin-top: 12px; /* reduced gap above subtitle */
    max-width: 451px;
    overflow-wrap: anywhere;
    text-align: center;
}



.solution-card .card-img {
  /* ensure images scale consistently and anchor to bottom of card */
  height: auto;
  max-width: 100%;
  /* Keep image big, but never intrude into title/desc/CTA area */
  max-height: clamp(380px, calc(100% - 240px), 560px);
  min-height: 220px; /* avoid overly small tall-portrait images */
  display: block;
  margin: auto auto 0 auto; /* push image to the bottom inside card */
  object-fit: contain;
  object-position: center bottom;
  border-radius: 12px;
  transition: max-width 0.2s, max-height 0.2s;
  align-self: end; /* grid: stick image to bottom */
  width: 94%; /* fuller like the reference */
  aspect-ratio: 16 / 10; /* slightly wider look like the reference */
}

/* Solutions section: targeted responsiveness */
@media (min-width: 1280px) {
  .solutions-grid {
    grid-template-columns: repeat(2, 919px);
    justify-content: center;
    column-gap: 22px;
    row-gap: 32px;
  }
  .solution-card {
    width: 919px;
    height: 690px; /* keep exact height */
    border-radius: 32px; /* ensure rounding maintained */
  }
  /* Make all solution images same height on desktop */
  .solution-card .card-img {
    height: auto; /* driven by aspect ratio + width */
    /* rely on base clamp to avoid overlap */
    max-height: clamp(380px, calc(100% - 240px), 560px);
    width: 94%;
  }
}

@media (max-width: 1400px) {
  .solutions-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 28px;
  }
  .solution-card {
    height: 640px; /* maintain consistent visual on mid screens */
    padding: 32px;
  }
  .solution-title {
    font-size: 36px;
    max-width: 95%;
  }
  .solution-subtitle {
    max-width: 520px;
  }
  .solution-card .card-img {
    height: auto;
    /* rely on base clamp to avoid overlap */
    max-height: clamp(360px, calc(100% - 240px), 540px);
    width: 94%;
  }
}

@media (max-width: 960px) {
  .solutions-grid {
    grid-template-columns: 1fr; /* already in file, reinforce for specificity */
    gap: 24px;
  }
  .solution-card {
    padding: 28px;
