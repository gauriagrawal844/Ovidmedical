/* ==========================================================================
   OVID MEDICAL - PROFESSIONAL CSS ARCHITECTURE
   ========================================================================== */

/* ==========================================================================
   1. IMPORTS & RESET
   ========================================================================== */
@import url('https://fonts.googleapis.com/css2?family=Barlow:wght@400;700&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Sora:wght@700&display=swap');

/* CSS Reset */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

/* ==========================================================================
   2. CSS CUSTOM PROPERTIES (DESIGN TOKENS)
   ========================================================================== */
:root {
  /* Colors */
  --color-primary: #1E72BE;
  --color-primary-hover: #4FC5F2;
  --color-secondary: #4fc7ff;
  --color-text-primary: #000000;
  --color-text-secondary: #ffffff;
  --color-background-primary: #ffffff;
  --color-background-secondary: #E1F3FD;
  --color-background-tertiary: #E7F0F4;
  --color-border: #ddd;
  --color-overlay: rgba(0, 0, 0, 0.4);
  
  /* Typography */
  --font-primary: 'Barlow', sans-serif;
  --font-secondary: 'Sora', sans-serif;
  --font-weight-regular: 400;
  --font-weight-bold: 700;
  
  /* Font Sizes */
  --font-size-xs: 16px;
  --font-size-sm: 18px;
  --font-size-base: 20px;
  --font-size-lg: 24px;
  --font-size-xl: 28px;
  --font-size-2xl: 36px;
  --font-size-3xl: 40px;
  --font-size-4xl: 48px;
  --font-size-5xl: 60px;
  --font-size-6xl: 96px;
  
  /* Spacing */
  --spacing-xs: 8px;
  --spacing-sm: 12px;
  --spacing-md: 16px;
  --spacing-lg: 20px;
  --spacing-xl: 24px;
  --spacing-2xl: 32px;
  --spacing-3xl: 40px;
  --spacing-4xl: 60px;
  --spacing-5xl: 80px;
  --spacing-6xl: 120px;
  
  /* Border Radius */
  --radius-sm: 8px;
  --radius-md: 12px;
  --radius-lg: 20px;
  --radius-xl: 32px;
  
  /* Shadows */
  --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
  --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1);
  
  /* Transitions */
  --transition-fast: 0.25s ease;
  --transition-normal: 0.3s ease;
  --transition-slow: 0.8s ease-in-out;
  
  /* Layout */
  --container-max-width: 1600px;
  --container-padding: 20px;
}

/* ==========================================================================
   3. BASE STYLES
   ========================================================================== */
body {
  margin: 0;
  font-family: var(--font-primary);
  color: var(--color-text-primary);
  line-height: 1.5;
  overflow-x: hidden; /* prevent horizontal scroll due to scaling wrapper */
  width: 100%;
}
/* Smooth scrolling for in-page anchors */
html { scroll-behavior: smooth; width: 100%; }
/* ==========================================================================
   4. UTILITY CLASSES
   ========================================================================== */

/* Scale the entire page to match 67% zoom at a 100% browser zoom on desktop */
.page-scale {
  --scale: 0.67; /* matches the 67% zoom look */
  /* Use zoom so layout height also scales and no extra bottom whitespace appears */
  zoom: var(--scale);
}

/* Fallback for browsers that don't support CSS zoom */
@supports not (zoom: 1) {
  .page-scale {
    position: relative;
    transform: scale(var(--scale));
    transform-origin: top left;
    width: calc(100% / var(--scale));
    display: block;
  }
}

/* Disable scaling on tablets/phones for usability */
@media (max-width: 1024px) {
  .page-scale {
    --scale: 1;
    zoom: 1;
  }
  @supports not (zoom: 1) {
    .page-scale {
      transform: none;
      width: 100%;
    }
  }
}

/* Container Utilities */
.container {
  max-width: var(--container-max-width);
  margin: 0 auto;
  padding: 0 var(--container-padding);
}

.container-wide {
  max-width: 1920px;
  margin: 0 auto;
  padding: 0 36px;
}

/* Typography Utilities */
.text-center { text-align: center; }
.text-left { text-align: left; }
.text-right { text-align: right; }

.font-primary { font-family: var(--font-primary); }
.font-secondary { font-family: var(--font-secondary); }
.font-regular { font-weight: var(--font-weight-regular); }
.font-bold { font-weight: var(--font-weight-bold); }

/* Flexbox Utilities */
.flex { display: flex; }
.flex-col { flex-direction: column; }
.flex-wrap { flex-wrap: wrap; }
.items-center { align-items: center; }
.items-start { align-items: flex-start; }
.justify-center { justify-content: center; }
.justify-between { justify-content: space-between; }
.justify-start { justify-content: flex-start; }

/* Spacing Utilities */
.gap-sm { gap: var(--spacing-sm); }
.gap-md { gap: var(--spacing-md); }
.gap-lg { gap: var(--spacing-lg); }
.gap-xl { gap: var(--spacing-xl); }
.gap-2xl { gap: var(--spacing-2xl); }
.gap-3xl { gap: var(--spacing-3xl); }
.gap-4xl { gap: var(--spacing-4xl); }
.gap-5xl { gap: var(--spacing-5xl); }

/* ==========================================================================
   5. COMPONENT STYLES
   ========================================================================== */

/* ----- NAVIGATION ----- */
.navbar {
  width: 100%;
  padding: var(--spacing-lg) 160px;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: var(--color-background-primary);
}

/* Symmetric navbar padding that scales down on narrower desktops */
@media (max-width: 1600px) {
  .navbar { padding: var(--spacing-lg) 120px; }
}
@media (max-width: 1400px) {
  .navbar { padding: var(--spacing-lg) 80px; }
}
@media (max-width: 1200px) {
  .navbar { padding: var(--spacing-lg) 60px; }
}

.sub-nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  max-width: var(--container-max-width);
  height: 70px;
}

.logo img {
  height: 70px;
  max-width: 107.1px;
}

.nav-links {
  list-style: none;
  display: flex;
  justify-content: space-between;
  gap: var(--spacing-sm);
  margin: 0;
  padding: 0;
}

.nav-links li a {
  text-decoration: none;
  font-family: var(--font-primary);
  font-weight: var(--font-weight-regular);
  font-size: var(--font-size-base);
  line-height: 16px;
  letter-spacing: 0px;
  color: var(--color-text-primary);
  padding: 10px 14px;
  transition: none;
}

.nav-links li a:hover {
  color: #3578fa;
}

/* Active nav link (desktop highlight) */
@media (min-width: 769px) {
  .nav-links li a.active {
    color: #3578fa; /* match hover color */
    text-decoration: underline;
    text-underline-offset: 8px;
    text-decoration-thickness: 3px;
  }
  /* When hovering any link, temporarily remove active styling from non-hovered items */
  .nav-links:hover a.active:not(:hover) {
    color: var(--color-text-primary);
    text-decoration: none;
  }
  .nav-links li a:hover {
    text-decoration: underline;
    text-underline-offset: 8px;
    text-decoration-thickness: 3px;
  }
}

/* Mobile nav controls - default hidden (desktop) */
.hamburger { display: none; }
.mobile-menu { display: none; }
.mobile-overlay { display: none; }

/* Explicit desktop reset (>=769px) */
@media (min-width: 769px) {
  .hamburger { display: none; }
  .sub-nav nav { display: block; }
  .sub-nav > div > .btn { display: inline-flex; }
}

/* ----- BUTTONS ----- */
/* Base button styles */
.btn,
.btn-primary,
.btn-secondary {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-sm) var(--spacing-xl);
  border-radius: var(--radius-sm);
  font-family: var(--font-primary);
  font-weight: var(--font-weight-regular);
  font-size: var(--font-size-base);
  line-height: 1;
  text-decoration: none;
  cursor: pointer;
  
  transition: all var(--transition-normal);
  border: 1px solid transparent;
  height: 52px; /* enforce consistent height across variants */
}

/* Primary button (default navbar button) */
.btn {
  background-color: var(--color-primary);
  color: var(--color-text-secondary);
  border: none;
  max-height: 52px;
}

.btn:hover {
  background-color: var(--color-primary-hover);
}

/* Primary button variant */
.btn-primary {
  background: var(--color-primary);
  color: var(--color-text-secondary);
  margin-right: 0; /* prevent extra right push on desktop */
  gap: var(--spacing-sm);
  max-height: 52px; /* keep for safety, height already set */
}

.btn-primary:hover {
  background: var(--color-primary-hover);
}

/* Secondary button variant */
.btn-secondary {
  background: transparent;
  color: var(--color-text-primary);
  gap: var(--spacing-sm);
  max-height: 52px; /* keep for safety, height already set */
}

.btn-secondary:hover {
  background: var(--color-primary-hover);
  border-color: var(--color-primary-hover);
}

/* Button animations */
.rotate-arrow {
  transition: transform var(--transition-normal);
}

.btn-primary:hover .rotate-arrow {
  transform: rotate(45deg);
}

.btn-text {
  transition: transform var(--transition-normal);
}

.btn-primary:hover .btn-text {
  transform: translateX(5px);
}

/* ----- HERO SECTION ----- */

.hero {
  /* height: calc(100vh - var(--spacing-3xl)); */
  height:890px;
  padding-bottom: var(--spacing-3xl);
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  overflow: hidden;
}

.hero-slider {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.hero-slide {
  position: absolute;
  inset: 0;
  opacity: 0;
  transition: opacity var(--transition-slow);
}

.hero-slide img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

.hero-slide.active {
  opacity: 1;
}

.hero::after {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: var(--color-overlay);
  z-index: 2;
}

.overlay {
  position: relative;
  gap: var(--spacing-3xl);
  z-index: 10;
  text-align: center;
  color: var(--color-text-secondary);
  max-width: 900px;
  padding: var(--spacing-lg);
  margin-top: var(--spacing-6xl);
}

.overlay h1 {
  font-family: var(--font-secondary);
  font-size: var(--font-size-5xl);
  font-weight: var(--font-weight-bold);
  line-height: 120%;
  margin-bottom: var(--spacing-lg);
  justify-content: center;
}

.hero-text {
  display: flex;
  justify-content: center;
}

.hero-text p {
  font-family: var(--font-primary);
  max-width: 839px;
  font-size: var(--font-size-base);
  font-weight: var(--font-weight-regular);
  line-height: 150%;
  letter-spacing: 0.15px;
  margin: 0 auto;
}

.hero-btn .btn-primary {
  margin-top: 2rem;
  background-color: transparent;
  border: 1px solid var(--color-text-secondary);
}

.hero-btn .btn-primary:hover {
  background-color: var(--color-primary-hover);
  border: 1px solid var(--color-primary-hover);
}

/* Hero controls */
.hero-progress {
  position: absolute;
  left: calc(var(--spacing-lg) - 23rem);
  bottom: calc(14px - 8rem);
  z-index: 11;
  display: flex;
  align-items: center;
  gap: 10px;
}

.hero-progress-text {
  color: var(--color-text-secondary);
  font-family: var(--font-primary);
  font-size: 23px;
  opacity: 0.9;
}

.hero-controls {
  position: absolute;
  right: calc(var(--spacing-lg) - 23rem);
  bottom: calc(var(--spacing-sm) - 8rem);
  z-index: 11;
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
}

.hero-prev {
  background: transparent;
  border: none;
  color: var(--color-secondary);
  font-size: 38px;
  line-height: 1;
  cursor: pointer;
  margin-top: 0.6rem;
}

.hero-next {
  --ringColor: var(--color-primary-hover);
  --progress: 0%;
  width: var(--spacing-3xl);
  height: var(--spacing-3xl);
  border-radius: 50%;
  background: transparent;
  border: 2px solid transparent;
  color: var(--ringColor);
  display: inline-flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  position: relative;
}

.hero-next::before,
.hero-next::after {
  content: none;
}

.hero-next span {
  font-size: 38px;
  margin-left: 1.3rem;
  margin-top: 0.5rem;
}

.progress-ring {
  position: absolute;
  inset: 0;
  pointer-events: none;
}

.progress-ring .ring-base {
  stroke: rgba(120, 136, 160, 0.45);
  stroke-width: 2;
}

.progress-ring .ring-progress {
  stroke: var(--ringColor);
  stroke-width: 2;
  stroke-linecap: round;
  transform: rotate(-90deg);
  transform-origin: 50% 50%;
  stroke-dasharray: 100;
  stroke-dashoffset: 100;
}



/* ----- HERO RESPONSIVE BREAKPOINTS (keep desktop composition, scale sizes) ----- */
/* XS: 0-480px */
@media (max-width: 480px) {
  .hero { height: 82vh; }
  .overlay {
    position: absolute; top: 54%; left: 50%; transform: translate(-50%, -50%);
    max-width: min(92%, 900px); margin-top: 0; padding: var(--spacing-md) var(--spacing-lg);
    text-align: center;
  }
  .overlay h1 { font-size: 28px; line-height: 1.2; }
  .hero-text p { font-size: 14px; line-height: 1.5; }
  .hero-btn .btn-primary { height: 42px; padding: 10px 16px; }
  .hero-progress { left: 16px; bottom: 16px; }
  .hero-controls { right: 16px; bottom: 16px; }
  .hero-progress-text { font-size: 12px; }
  .hero-prev { font-size: 22px; }
  .hero-next { width: 34px; height: 34px; }
  .hero-next .progress-ring { width: 30px; height: 30px; }
}

/* SM: 481-767px */
@media (min-width: 481px) and (max-width: 767px) {
  .hero { height: 84vh; }
  .overlay {
    position: absolute; top: 53%; left: 50%; transform: translate(-50%, -50%);
    max-width: min(92%, 900px); margin-top: 0; padding: var(--spacing-md) var(--spacing-xl);
    text-align: center;
  }
  .overlay h1 { font-size: 30px; line-height: 1.2; }
  .hero-text p { font-size: 15px; line-height: 1.5; }
  .hero-btn .btn-primary { height: 44px; padding: 10px 18px; }
  .hero-progress { left: 18px; bottom: 18px; }
  .hero-controls { right: 18px; bottom: 18px; }
  .hero-progress-text { font-size: 13px; }
  .hero-prev { font-size: 24px; }
  .hero-next { width: 36px; height: 36px; }
  .hero-next .progress-ring { width: 32px; height: 32px; }
}

/* MD: 768-1023px (tablets portrait) */
@media (min-width: 768px) and (max-width: 1023px) {
  .hero { height: 80vh; }
  .overlay {
    position: absolute; top: 52%; left: 50%; transform: translate(-50%, -50%);
    max-width: min(900px, 92%); padding: var(--spacing-lg) var(--spacing-2xl);
  }
  .overlay h1 { font-size: 36px; line-height: 1.2; }
  .hero-text p { font-size: 18px; }
  .hero-btn .btn-primary { height: 48px; padding: 12px 22px; }
  .hero-progress { left: 22px; bottom: 22px; }
  .hero-controls { right: 22px; bottom: 22px; }
  .hero-progress-text { font-size: 14px; }
  .hero-prev { font-size: 26px; }
  .hero-next { width: 40px; height: 40px; }
  .hero-next .progress-ring { width: 36px; height: 36px; }
}

/* LG: 1024-1279px (laptops/small desktops) */
@media (min-width: 1024px) and (max-width: 1279px) {
  .hero { height: 86vh; }
  .overlay { position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); }
  .overlay h1 { font-size: 44px; }
  .hero-text p { font-size: 20px; }
  .hero-progress { left: 28px; bottom: 28px; }
  .hero-controls { right: 28px; bottom: 28px; }
  .hero-progress-text { font-size: 16px; }
  .hero-prev { font-size: 30px; }
  .hero-next { width: 44px; height: 44px; }
}

/* XL: 1280-1535px (desktops) — keep base sizes, minor nudge */
@media (min-width: 1280px) and (max-width: 1535px) {
  .overlay { position: relative; margin-top: var(--spacing-6xl); }
}

/* UW: 1536px+ (ultra-wide) — keep base desktop styles */
@media (min-width: 1536px) {
  /* no changes; rely on base desktop */
}

/* ----- INNOVATIVE SECTION ----- */

.innovative-section {
  padding: var(--spacing-5xl) 0;
  background: var(--color-background-primary);
  position: relative;
}

.innovative-section .container {
  padding: 0 2px;
}

.content-wrapper {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: var(--spacing-5xl);
  gap: 100px;
}

.text-content {
  flex: 1;
  max-width: 892px;
}

.section-label h5 {
  font-family: var(--font-primary);
  font-weight: var(--font-weight-bold);
  font-size: var(--font-size-lg);
  line-height: var(--spacing-2xl);
  letter-spacing: 0.18px;
  color: var(--color-text-primary);
  margin: 0;
  text-transform: capitalize;
}

.section-title {
  font-family: var(--font-secondary);
  font-weight: var(--font-weight-bold);
  font-size: var(--font-size-5xl);
  line-height: 120%;
  letter-spacing: -0.5px;
  color: var(--color-text-primary);
  margin: var(--spacing-xl) 0 0;
}

.description-content {
  flex: 1;
  max-width: 655px;
}

.description {
  font-family: var(--font-primary);
  font-weight: var(--font-weight-regular);
  font-size: var(--font-size-base);
  line-height: 150%;
  letter-spacing: 0.15px;
  color: var(--color-text-primary);
  margin-bottom: var(--spacing-3xl);
}

.innovative-section .feature-action {
  justify-content: flex-start;
}

.image-container {
  margin-top: var(--spacing-lg);
  border-radius: var(--radius-xl);
  overflow: hidden;
}

.feature-image {
  width: 100%;
  height: 860px;
  object-fit: cover;
  position: relative;
  z-index: 3;
}



/* ----- SECTION VECTOR BACKGROUND ----- */
.section-vector-bg {
  width: 100%;
  height: 1500px;
  background: url('images/Vector (2).png') no-repeat center center;
  background-size: cover;
  position: absolute;
  overflow: hidden;
  z-index: 2;
  margin-top: -160px;
  pointer-events: none;
  color: #1680FB;
}

/* ----- FEATURE SECTION ----- */
.feature-section {
  background: var(--color-background-primary);
  padding: var(--spacing-5xl) 0;
}

.feature-container {
  margin: 0 auto;
  padding: 0 var(--spacing-3xl);
  text-align: center;
}

.feature-header {
  max-width: 832px;
  margin: auto;
  text-align: center;
  gap: 43px;
}

.feature-header-h-content {
  font-family: var(--font-secondary);
  font-weight: var(--font-weight-bold);
  font-size: var(--font-size-3xl);
  letter-spacing: -2px;
  text-align: center;
  color: var(--color-text-primary);
  margin-bottom: var(--spacing-3xl);
  max-width: 892px;
}

.feature-header-p-content {
  font-family: var(--font-primary);
  font-weight: var(--font-weight-regular);
  font-size: var(--font-size-base);
  letter-spacing: 0.30px;
  align-items: center;
  max-width: 832px;
  max-height: 60px;
  margin: 0 auto;
  color: var(--color-text-primary);
}
.feature-grid {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  gap: var(--spacing-lg);
  margin-bottom: var(--spacing-4xl);
}

.feature-column {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  gap: 70px;
  width: 404px;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  gap: var(--spacing-xl);
}

.feature-icon {
  width: var(--spacing-5xl);
  height: var(--spacing-5xl);
  border-radius: 50%;
  background: var(--color-background-secondary);
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  z-index: 3;
}

.feature-icon img {
  width: 50%;
  height: 50%;
}

.feature-item h3 {
  font-family: var(--font-primary);
  font-weight: var(--font-weight-bold);
  font-size: var(--font-size-xl);
  line-height: var(--spacing-2xl);
  letter-spacing: 0.18px;
  color: var(--color-text-primary);
  margin: 0;
  max-width: 397px;
}

.feature-item p {
  font-family: var(--font-primary);
  font-weight: var(--font-weight-regular);
  font-size: var(--font-size-base);
  line-height: 150%;
  letter-spacing: 0.15px;
  color: var(--color-text-primary);
  margin: 0;
  width: 404px;
}

.feature-center-image {
  flex-shrink: 0;
}

.feature-center-image img {
  width: 730px;
  height: 730px;
  object-fit: contain;
  mix-blend-mode: multiply;
}


/* Responsive Design */
@media (max-width: 1200px) {
  .feature-container {
    padding: 0 20px;
  }

  .feature-grid {
    flex-direction: column;
  }

  .feature-column {
    width: 100%;
    gap: 40px;
  }
  
  .feature-item {
    gap: 15px;
  }

  .feature-item p {
    width: 100%;
    font-size: 16px;
  }

  .feature-center-image img {
    width: 100%;
    height: auto;
  }
}

@media (max-width: 768px) {
  .feature-header h2 {
    font-size: 36px;
    line-height: 1.2;
  }

  .feature-header p {
    font-size: 16px;
  }

  .feature-action {
    flex-direction: column;
    gap: 15px;
  }

  .btn-primary,
  .btn-secondary {
    width: 100%;
    box-sizing: border-box;
    justify-content: center;
  }

  .feature-item h3 {
    font-size: 22px;
    line-height: 1.2;
  }

  .feature-icon {
    width: 60px;
    height: 60px;
  }
}

/* Solutions Section */

.solutions-section {
    background: #fff;
    padding: 80px 0;
    max-width:100%;
