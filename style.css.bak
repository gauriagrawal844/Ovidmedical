}

.solutions-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 32px;
    align-items: start; /* prevent cross-axis stretch causing overlap */
}

.solution-card {
    border-radius: 32px;
    text-align: center;
    padding: 40px;
    display: grid;
    grid-template-rows: auto auto auto 1fr; /* title, subtitle, cta, flexible spacer for image */
    justify-items: center;
    align-items: start;
    width: auto;
    height: 690px; /* desktop: match reference height */
    position: relative;
    overflow: hidden; /* keep image and content inside the rounded card */
    row-gap: 12px; /* slightly tighter spacing between blocks */
}

/* Backgrounds based on diagonal pattern */
.solution-card:nth-child(4n + 1),
.solution-card:nth-child(4n + 4) {
    background: #E1F3FD; /* Light Blue */
}

.solution-card:nth-child(4n + 2),
.solution-card:nth-child(4n + 3) {
    background: #E7F0F4; /* Lighter Blue */
}

.solution-title {
    font-family: 'Sora', sans-serif;
    font-weight: 700;
    font-size: 40px;
    /* line-height: 56px; */
