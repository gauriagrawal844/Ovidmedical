/* ==========================================================================
   6. RESPONSIVE DESIGN
   ========================================================================== */

/* ----- TABLET (1024px and below) ----- */
@media (max-width: 768px) {
  .navbar {
    padding: var(--spacing-lg) var(--spacing-3xl);
  }

  .nav-links li a,
  .btn {
    font-size: var(--font-size-xs);
  }

  .btn {
    padding: var(--spacing-sm) var(--spacing-sm);
  }

  .container {
    padding: 0 var(--spacing-3xl);
  }

  .content-wrapper {
    flex-direction: column;
    gap: var(--spacing-3xl);
  }

  .text-content,
  .description-content {
    max-width: 100%;
  }

  .section-title {
    font-size: var(--font-size-4xl);
  }

  .description {
    font-size: var(--font-size-sm);
  }

  .feature-image {
    height: 600px;
    border-radius: var(--radius-lg);
  }

  .feature-container {
    padding: 0 var(--spacing-lg);
  }

  .feature-grid {
    flex-direction: column;
  }

  .feature-column {
    width: 100%;
    gap: var(--spacing-3xl);
  }

  .feature-item {
    gap: 15px;
  }

  .feature-item p {
    width: 100%;
    font-size: var(--font-size-xs);
  }

  .feature-center-image img {
    width: 100%;
    height: auto;
  }
}

/* ----- NAVBAR: MOBILE (768px and below) ----- */
@media (max-width: 768px) {
  .navbar {
    padding: var(--spacing-lg) var(--spacing-3xl);
    /* position:fixed; */
  }

  .sub-nav {
    position: relative;
    height: 64px;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
  }

  /* Hide desktop nav links and CTA below 1024 */
  .sub-nav nav,
  .sub-nav > div > .btn { /* the Contact Us button */
    display: none;
  }

  /* Show hamburger */
  .hamburger {
    display: inline-flex;
    position: static;
    margin-left: auto;
    width: 40px;
    height: 40px;
    border: 1px solid var(--color-border);
    border-radius: 10px;
    background: #fff;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    gap: 4px;
    cursor: pointer;
  }

  .hamburger-bar {
    width: 18px;
    height: 2px;
    background: #1E72BE;
    display: block;
    border-radius: 1px;
    transition: transform 0.25s ease, opacity 0.2s ease;
  }

  /* Animate hamburger into an 'X' when expanded */
  .hamburger[aria-expanded="true"] .hamburger-bar:nth-child(1) {
    transform: translateY(6px) rotate(45deg);
  }
  .hamburger[aria-expanded="true"] .hamburger-bar:nth-child(2) {
    opacity: 0;
  }
  .hamburger[aria-expanded="true"] .hamburger-bar:nth-child(3) {
    transform: translateY(-6px) rotate(-45deg);
  }

  /* Overlay */
  .mobile-overlay {
    position: fixed;
    inset: 0;
    background: rgba(0,0,0,0.5);
    z-index: 1000;
    opacity: 0;
    pointer-events: none;
    transition: opacity var(--transition-normal);
  }

  /* Right-side off-canvas menu */
  .mobile-menu {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    width: min(88vw, 360px);
    background: #fff;
    box-shadow: -8px 0 24px rgba(0,0,0,0.12);
    z-index: 1001;
    display: flex;
    flex-direction: column;
    transform: translateX(100%);
    transition: transform var(--transition-normal);
  }

  .mobile-menu.open { transform: translateX(0); }

  /* Fade-in overlay when visible (JS toggles hidden attribute) */
  .mobile-overlay:not([hidden]) {
    opacity: 1;
    pointer-events: auto;
  }

  .mobile-menu-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 12px 20px;
    border-bottom: 1px solid #eee;
  }

  .mobile-logo { height: 48px; }

  .mobile-close {
    width: 40px;
    height: 40px;
    border: 1px solid var(--color-border);
    border-radius: 10px;
    background: #fff;
    position: relative;
    cursor: pointer;
  }
  .mobile-close .close-bar {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 18px;
    height: 2px;
    background: #1E72BE;
    border-radius: 1px;
  }
  .mobile-close .close-bar:first-child { transform: translate(-50%, -50%) rotate(45deg); }
  .mobile-close .close-bar:last-child { transform: translate(-50%, -50%) rotate(-45deg); }

  .mobile-nav ul {
    list-style: none;
    margin: 0;
    padding: 16px 20px;
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .mobile-nav a {
    display: block;
    padding: 12px 10px;
    text-decoration: none;
    color: #000;
    font-family: var(--font-primary);
    font-size: 18px;
    border-radius: 8px;
  }

  .mobile-nav a:hover {
    background: #E7F0F4;
    color: #1E72BE;
  }

  .mobile-cta {
    padding: 12px 20px 16px;
    border-top: 1px solid #eee;
  }

  .btn-mobile {
    display: inline-flex;
    width: 100%;
    height: 48px;
  }
}

/* ----- MOBILE (768px and below) ----- */
@media (max-width: 425px) {
  .navbar {
    padding: 15px var(--spacing-lg);
    /* position:fixed; */
  }

  .sub-nav {
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    height: 64px;
  }

  .logo img {
    height: 50px;
  }

  .nav-links,
  .btn {
    margin-top: 15px;
    width: 100%;
    text-align: center;
  }

  .container {
    padding: 0 var(--spacing-lg);
  }

  .section-title {
    font-size: var(--font-size-2xl);
    line-height: 1.3;
  }

  .description {
    font-size: var(--font-size-xs);
    padding: var(--spacing-sm) var(--spacing-lg);
  }

  .feature-image {
    height: 400px;
    border-radius: 10px;
  }

  .feature-header h2 {
    font-size: var(--font-size-2xl);
    line-height: 1.2;
  }

  .feature-header p {
    font-size: var(--font-size-xs);
  }

  .feature-action {
    flex-direction: column;
    gap: 15px;
  }

  .btn-primary,
  .btn-secondary {
    width: 100%;
    box-sizing: border-box;
    justify-content: center;
  }

  .feature-item h3 {
    font-size: 22px;
    line-height: 1.2;
  }

  .feature-icon {
    width: var(--spacing-4xl);
    height: var(--spacing-4xl);
  }

  .contact-grid {
    flex-direction: column;
    gap: var(--spacing-3xl);
  }

  .footer-container {
    flex-direction: column;
    gap: var(--spacing-3xl);
  }

  .footer-links {
    gap: 50px;
  }
}

/* ----- LARGE MOBILE (480px and below) ----- */
@media (max-width: 425px) {

  .section-title {
    font-size: var(--font-size-xl);
  }

  .feature-header-h-content {
    font-size: var(--font-size-xl);
  }

  .training-card {
    width: 90%;
  }

  .statistics-left h2 {
    font-size: var(--font-size-2xl);
    line-height: 44px;
  }

  .statistics-right p {
    font-size: var(--font-size-sm);
  }

  .stat-percent {
    font-size: 64px;
    line-height: 72px;
  }

}

/* Contact & Footer: Large laptop (<= 1400px) */
@media (max-width: 1400px) {
  .contact-grid { gap: 48px; }
  .contact-card { min-width: 400px; max-width: 460px; }
  .footer-container { column-gap: 40px; row-gap: 40px; }
  .newsletter-input input[type="email"] { max-width: 100%; }
  .subscribe-btn { right: -3rem; }
}

/* Contact & Footer: Small/Medium laptop (<= 1200px) */
@media (max-width: 1200px) {
  .contact-grid { flex-wrap: wrap; gap: 40px; }
  .contact-card { flex: 1 1 45%; min-width: 360px; max-width: 520px; }

  .footer-container { flex-wrap: wrap; row-gap: 40px; }
  .quick-links-container ul { flex-wrap: wrap; row-gap: 10px; }
  .newsletter-input { width: 100%; }
  .form-input { width: 100%; }
  /* Prevent overlap: make subscribe button flow in document, full width */
  .newsletter-input { display: grid; grid-template-columns: 1fr; row-gap: 12px; margin-bottom: 24px; }
  .subscribe-btn { position: static; top: auto; right: auto; left: auto; transform: none; width: 100%; margin-left: 0; display: block; }
  .quick-links { margin-top: 10px; }
}

/* Contact & Footer: Tablet (<= 992px) */
@media (max-width: 992px) {
  .contact-container h2 { font-size: 42px; }
  .contact-container p { font-size: 18px; margin-bottom: 80px; }
  .contact-grid { justify-content: center; gap: 32px; }
  .contact-card { flex: 1 1 100%; min-width: 0; max-width: 600px; margin: 0 auto; }
  .contact-card h3 { font-size: 40px; margin-top: 48px; }
  .contact-card p { font-size: 20px; }

  .footer-container { flex-direction: column; align-items: stretch; gap: 32px; }
  .quick-links-container ul { justify-content: flex-start; padding-left: 0; }
  .footer-bottom { flex-direction: column; gap: 16px; align-items: flex-start; }
  /* Keep heading below the newsletter safely */
  .newsletter-input { display: grid; grid-template-columns: 1fr; row-gap: 12px; margin-bottom: 24px; }
  .subscribe-btn { position: static; top: auto; right: auto; left: auto; transform: none; width: 100%; margin-left: 0; display: block; }
  .quick-links { margin-top: 12px; }
}

/* Large mobile / small tablet (<= 768px) */
@media (max-width: 768px) {
  .contact-section { padding: 120px 0 60px 0; }
  .contact-card { width: 100%; max-width: 520px; }
  .contact-card h3 { font-size: 36px; margin-top: 36px; }
  .contact-card p { font-size: 18px; }
  .ctc { font-size: 18px; }

  .footer-section { padding: 60px 24px; }
  .footer-container { gap: 28px; align-items: stretch; }
  .newsletter-text { font-size: 18px; }
  /* Stack email and button so the button cannot overlap the next section */
  .newsletter-input { display: grid; grid-template-columns: 1fr; align-items: center; row-gap: 12px; margin-bottom: 28px; }
  .newsletter-input input[type="email"] { padding-right: 12px; width: 100%; }
  .subscribe-btn { position: static; top: auto; right: auto; left: auto; transform: none; max-height: none; margin-left: 0; width: 100%; display: block; }
  .quick-links { margin-top: 14px; }
  .quick-links-container ul{flex-direction: column;}
}

/* Small / medium mobile (<= 480px) */
@media (max-width: 480px) {
  .contact-container h2 { font-size: 34px; }
  .contact-container p { font-size: 16px; margin-bottom: 48px; }
  .contact-card { max-width: 100%; }
  .contact-card h3 { font-size: 32px; }
  .contact-card p, .contact-card a, .contact-card address { font-size: 16px; }
  .contact-icon { width: 52px; height: 52px; }
  .newsletter-text { font-size: 16px; }
  .newsletter-input { grid-template-columns: 1fr; row-gap: 12px; margin-bottom: 28px; }
  .subscribe-btn { width: 100%; margin-left: 0; position: static; top: auto; right: auto; left: auto; transform: none; display: block; }
  .quick-links { margin-top: 16px; }
}
